@page
@model JewelrySalesSystem_NoName_FE.Pages.Staff.Orders.ListOrderModel
@{
    ViewData["Title"] = "Search Jewelry Orders";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="order-list">
                            <h2>Danh Sách Đơn Hàng</h2>
                            <form id="searchForm">
                                <div class="form-group">
                                    <label for="order-id">Mã đơn hàng</label>
                                    <input type="text" id="orderId" placeholder="Mã đơn hàng" value="@Model.OrderId">
                                </div>
                                <div class="form-group">
                                    <label for="date">Ngày</label>
                                    <input type="date" id="insDate" placeholder="dd/mm/yyyy" value="@Model.InsDate?.ToString("yyyy-MM-dd")">
                                    <button type="button" class="clear-button" onclick="clearDate()">X</button>
                                </div>
                                <div class="form-group">
                                    <label for="phone">Số điện thoại</label>
                                    <input type="text" id="phone" placeholder="Số điện thoại" value="@Model.Phone">
                                </div>
                                <button type="button" class="search-button" onclick="applyFilters()">Tìm kiếm</button>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Mã</th>
                                        <th>Tổng giá trị</th>
                                        <th>Giá xử lý vật liệu</th>
                                        <th>Mã khuyến mãi</th>
                                        <th>Xem chi tiết</th>
                                        <th>Ngày mua hàng</th>
                                    </tr>
                                </thead>
                                <tbody id="orderListBody">
                                    @if (Model.OrderList != null && Model.OrderList.Count > 0)
                                    {
                                        @foreach (var order in Model.OrderList)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.TotalPrice</td>
                                                <td>@order.MaterialProccessPrice</td>
                                                <td>@order.DiscountId</td>
                                                <td>@order.InsDate</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderModal-@order.Id">
                                                        <i class="fa fa-eye menu-icon"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <!-- Detail -->
                                            <div class="modal fade" id="orderModal-@order.Id" tabindex="-1" aria-labelledby="orderModalLabel-@order.Id" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="orderModalLabel-@order.Id">Order Details - @order.Id</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Mã đơn hàng: @order.Id</p>
                                                            <p>Tổng giá trị: @order.TotalPrice</p>
                                                            <p>Giá xử lý vật liệu: @order.MaterialProccessPrice</p>
                                                            @* <p>ID khách hàng: @order.CustomerId</p> *@
                                                            <p>Mã khuyến mãi: @order.DiscountId</p>
                                                            <p>Số điện thoại khách hàng: @order.CustomerPhone</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">Không có trong danh sách</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function applyFilters() {
            var orderId = document.getElementById("orderId").value;
            var insDate = document.getElementById("insDate").value;
            var phone = document.getElementById("phone").value;

            var url = `./ListOrder?`;

            if (orderId) {
                url += `&OrderId=${orderId}`;
            }
            if (insDate) {
                url += `&InsDate=${insDate}`;
            }
            if (phone) {
                url += `&Phone=${phone}`;
            }

            window.location.href = url;
        }

        function clearDate() {
            document.getElementById("insDate").value = "";
        }
    </script>
}

<style>
    .order-list {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .order-list h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-group label {
            flex: 0 0 100px;
        }

        .form-group input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    .clear-button {
        margin-left: 10px;
        background: none;
        border: none;
        color: #888;
        cursor: pointer;
        font-size: 16px;
    }

        .clear-button:hover {
            color: #000;
        }

    .search-button {
        display: block;
        width: 100%;
        padding: 10px;
        background: linear-gradient(90deg, #ff7e5f, #feb47b);
        border: none;
        color: #fff;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .search-button:hover {
            background: linear-gradient(90deg, #feb47b, #ff7e5f);
        }

</style>