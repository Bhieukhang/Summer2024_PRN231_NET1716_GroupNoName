@page
@model JewelrySalesSystem_NoName_FE.Pages.Staff.Orders.ListOrderModel
@{
    int totalOrderCount = Model.TotalOrderCount;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-mixone card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/assets/images/dashboard/circle.png" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Tổng đơn hàng  <i class="mdi mdi-chart-line mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@totalOrderCount</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tìm kiếm đơn hàng Jewelry</h4>
                        <form method="get" asp-page-handler="Search" class="forms-sample">
                            <div class="form-group row">
                                <label for="SearchCode" class="col-sm-2 col-form-label">Mã đơn hàng</label>
                                <div class="col-sm-10">
                                    <input type="text" id="SearchCode" name="SearchCode" class="form-control" placeholder="Nhập mã đơn hàng" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách đơn hàng</h4>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Mã</th>
                                    <th>Tổng giá trị</th>
                                    <th>Giá xử lý vật liệu</th>
                                    @*                                     <th>ID khách hàng</th>
                                    <th>Mã khuyến mãi</th>
                                    <th>Mã giảm giá</th> *@
                                </tr>
                            </thead>
                            <tbody id="orderListBody">
                                @foreach (var order in Model.OrderList)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.TotalPrice</td>
                                        <td>@order.MaterialProccessPrice</td>
                                        <td>@order.CustomerPhone</td>
                                        @*                                         <td>@order.CustomerId</td> *@
                                        @*                                         <td>@order.DiscountId</td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            getAllOrders();

            function getAllOrders() {
                $.ajax({
                    url: '@Url.Page("ListOrder", "OnGetAllOrdersAsync")',
                    type: 'GET',
                    success: function (result) {
                        // Update the order list with the received data
                        if (result && result.length > 0) {
                            var orderListHtml = '';
                            $.each(result, function (index, order) {
                                orderListHtml += '<tr>' +
                                    '<td>' + order.totalPrice + '</td>' +
                                    '<td>' + order.materialProcessPrice + '</td>' +
                                    '<td>' + order.customerId + '</td>' +
                                    '<td>' + order.promotionId + '</td>' +
                                    '<td>' + order.discountId + '</td>' +
                                    '</tr>';
                            });
                            $('#orderListBody').html(orderListHtml);
                        } else {
                            // Handle case when no orders are returned
                            $('#orderListBody').html('<tr><td colspan="5">Không tìm thấy đơn hàng.</td></tr>');
                        }
                    },
                    error: function () {
                        alert('Lỗi khi lấy dữ liệu đơn hàng. Vui lòng thử lại sau.');
                    }
                });
            }
        });
    </script>
}
<style>
    .bg-gradient-mixone {
        background: linear-gradient(0deg, rgba(34,82,195,1) 9%, rgba(45,253,214,0.9960434857536765) 96%);
    }
</style>