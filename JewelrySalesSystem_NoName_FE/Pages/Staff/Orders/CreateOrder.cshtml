@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Orders.CreateOrderModel
@{
}
<body>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Đơn hàng </h3>
            </div>
            <div class="row">
                <!-- Basic form -->
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Trang sức</h4>
                            <form class="forms-sample">
                                <div class="form-group">
                                    <label for="exampleInputName1">Mã barcode</label>
                                    <input type="text" class="form-control" id="Code">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Sản phẩm</label>
                                    <input type="text" class="form-control" id="product">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Giá</label>
                                    <input type="number" class="form-control" id="price">
                                </div>
                                <div class="col-12 grid-margin">
                                    <div class="card">
                                        @*                                        <div class="card-body">*@
                                        <div class="form-group row">
                                            <label class="col-sm-1 col-form-label">Số lượng</label>
                                            <div class="col-sm-7 d-flex align-items-center">
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <button type="button" class="btn btn-secondary" onclick="changeQuantity(-1)">-</button>
                                                    </div>
                                                    <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1">
                                                    <div class="input-group-append">
                                                        <button type="button" class="btn btn-secondary" onclick="changeQuantity(1)">+</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 d-flex align-items-center">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#promotion">Khuyến mãi</button>
                                                <!-- Modal -->
                                                <div class="modal fade" id="promotion">
                                                    <div class="modal-dialog modal-xl">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Khuyến mãi</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">×</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">Danh sách khuyến mãi</div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                                <button type="button" class="btn btn-primary">Lưu</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="discount" class="col-sm-1 col-form-label">Chiết khấu</label>
                                            <div class="col-sm-10">
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#discount">Thêm chiết khấu</button>
                                                <!-- Modal -->
                                                <div class="modal fade" id="discount">
                                                    <div class="modal-dialog modal-xl">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Thêm chiết khấu</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">×</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">Yêu cầu chiết khấu</div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                                <button type="button" class="btn btn-primary">Lưu</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-body">
                                                <button type="submit" class="btn btn-gradient-primary me-2">Tạo hóa đơn</button>
                                                <button class="btn btn-light">Hủy</button>
                                            </div>
                                        </div>
                                    </div>
                                    @*                                    </div>*@
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>