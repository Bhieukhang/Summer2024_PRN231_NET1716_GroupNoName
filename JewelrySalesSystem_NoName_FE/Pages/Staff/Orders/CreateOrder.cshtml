@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Orders.CreateOrderModel
@{
}
<body>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Đơn hàng </h3>
            </div>
            <div class="row">
                <!-- Basic form -->
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Trang sức</h4>
                            <form class="forms-sample">
                                <div class="form-group">
                                    <label for="exampleInputName1">Mã barcode</label>
                                    <input type="text" class="form-control" id="Code">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Sản phẩm</label>
                                    <input type="text" class="form-control" id="product">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Giá</label>
                                    <input type="number" class="form-control" id="price">
                                </div>
                                <div class="input-group quantity-input">
                                    <label for="exampleInputPassword4" style="margin-right: 10px;">Số lượng</label>
                                    <div style="display: flex; align-items: center;">
                                        <div class="input-group-prepend">
                                            <button type="button" class="btn btn-secondary" onclick="changeQuantity(-1)" style="margin-right: 5px;">-</button>
                                        </div>
                                        <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-secondary" onclick="changeQuantity(1)" style="margin-left: 5px;">+</button>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-gradient-primary me-2">Tạo hóa đơn</button>
                                <button class="btn btn-light">Hủy</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>