@* @page
@model JewelrySalesSystem_NoName_FE.Pages.Staff.Orders.TestChartModel
@{
}
<canvas id="orderPieChart" width="400" height="400"></canvas>
<script>
    async function fetchOrderData(year) {
        const response = await fetch(`api/v1/order/static/year-grouped-by-month?year=${year}`);
        const data = await response.json();
        return data;
    }

    async function createPieChart(year) {
        const data = await fetchOrderData(year);
        const ctx = document.getElementById('orderPieChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: Object.keys(data).map(month => `Month ${month}`),
                datasets: [{
                    label: 'Order Count',
                    data: Object.values(data),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        // add more colors as needed
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        // add more colors as needed
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });
    }

    // Call the function with the desired year
    createPieChart(2023);
</script>
</body>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script> *@