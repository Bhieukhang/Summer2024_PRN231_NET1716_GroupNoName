@page
@model JewelrySalesSystem_NoName_FE.Pages.Staff.Discounts.DiscountDetailsModel
@{
    var discount = Model?.Discount;
}

<div class="main-panel">
    <div class="content-wrapper">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin chiết khấu</h4>

                @if (Model?.Discount != null)
                {
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-feather me-1"></i> Id: </span>
                            <span> @discount?.Id</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-feather me-1"></i> Order Id: </span>
                            <span> @discount?.OrderId</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-feather me-1"></i> Manager Id: </span>
                            <span> @discount?.ManagerId</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold "><i class="bi bi-power me-1"></i> Status: </span>
                            <span class="badge badge-info">
                                @(discount?.Status)
                            </span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-percent me-1"></i> Percent Discount: </span>
                            <span>@discount?.PercentDiscount<span>%</span></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-card-text me-1"></i> Description: </span>
                            <span>@discount?.Description</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-archive me-1"></i>Condition Discount: </span>
                            <span>@discount?.ConditionDiscount</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-tag me-1"></i> Note: </span>
                            <span><span>@discount?.Note</span></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-calendar me-1"></i> Ins Date - Ups Date: </span>
                            <span>@discount?.InsDate - @discount?.UpsDate</span>
                        </div>
                    </div>

                 
                    <div class="row">
                        <div class="col-sm-12 d-flex flex-row justify-content-start">
                            <a href="ListDiscount" class="btn btn-secondary me-3">

                                <i class="bi bi-arrow-left"></i>
                                <span>Trở về</span>
                            </a>
                            <a href="EditDiscount?discountId=@discount?.Id" class="btn btn-primary ">
                                <i class="bi bi-pencil"></i>
                                <span>Chỉnh sửa</span>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div>Chiết khấu bạn tìm không tồn tại.</div>
                }
            </div>
        </div>
    </div>
</div>

