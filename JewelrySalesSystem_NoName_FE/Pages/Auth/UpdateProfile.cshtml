@page 
@model JewelrySalesSystem_NoName_FE.Pages.Auth.UpdateProfileModel
@{
}

<body>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h4 class="page-title"> Edit Profile </h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <!-- Thêm -->
                    </ol>
                </nav>
            </div>
            <div class="row">
                <!-- Basic form -->
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <form method="post" class="forms-sample">
                                <div class="form-group">
                                    <label asp-for="accountProfile.FullName" class="control-label">Full Name</label>
                                    <input asp-for="accountProfile.FullName" class="form-control" />
                                    <span asp-validation-for="accountProfile.FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="accountProfile.Dob" class="control-label">Date of Birth</label>
                                    <input asp-for="accountProfile.Dob" class="form-control" type="date" />
                                    <span asp-validation-for="accountProfile.Dob" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="accountProfile.Address" class="control-label">Address</label>
                                    <input asp-for="accountProfile.Address" class="form-control" />
                                    <span asp-validation-for="accountProfile.Address" class="text-danger"></span>
                                </div>
                                @* <div class="form-group">
                                <label>Hình ảnh</label>
                                <input type="file" name="img[]" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                                <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary py-3" type="button">Upload</button>
                                </span>
                                </div>
                                </div> *@
                                <div class="form-group">
                                    <label asp-for="accountProfile.ImgUrl" class="control-label">Profile Image URL</label>
                                    <input asp-for="accountProfile.ImgUrl" class="form-control" />
                                    <span asp-validation-for="accountProfile.ImgUrl" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-gradient-primary me-2">Save Changes</button>
                                <a asp-page="./Profile" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}