@page 
@model JewelrySalesSystem_NoName_FE.Pages.Auth.UpdateProfileModel
@{
}

<body>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h4 class="page-title"> Chỉnh sửa Hồ sơ </h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <!-- Thêm -->
                    </ol>
                </nav>
            </div>
            <div class="row">
                <!-- Basic form -->
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <form method="post" class="forms-sample" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="accountProfile.FullName" class="control-label">Họ tên</label>
                                    <input asp-for="accountProfile.FullName" class="form-control" />
                                    <span asp-validation-for="accountProfile.FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="accountProfile.Dob" class="control-label">Ngày tháng năm sinh</label>
                                    <input asp-for="accountProfile.Dob" class="form-control" type="date" />
                                    <span asp-validation-for="accountProfile.Dob" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="accountProfile.Password" class="control-label">Mật khẩu</label>
                                    <input asp-for="accountProfile.Password" class="form-control" type="password" />
                                    <span asp-validation-for="accountProfile.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="accountProfile.Address" class="control-label">Địa chỉ</label>
                                    <input asp-for="accountProfile.Address" class="form-control" />
                                    <span asp-validation-for="accountProfile.Address" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Hình ảnh Hồ sơ</label>
                                    @if (!string.IsNullOrEmpty(Model.accountProfile.ImgUrl))
                                    {
                                        <div>
                                            <img src="@Model.accountProfile.ImgUrl" alt="Profile Image" style="max-width: 200px; max-height: 200px;" />
                                        </div>
                                    }
                                    <input type="file" asp-for="Image" class="form-control-file" />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-gradient-primary me-2">Lưu thay đổi</button>
                                <a asp-page="./Profile" class="btn btn-light">Hủy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
