@page "/profile"
@model JewelrySalesSystem_NoName_FE.Pages.Auth.ProfileModel
@{
}

<div class="container mt-4">
    <div class="card">
        <div class="row no-gutters">
            <div class="col-md-4 text-center">
                <img src="@Model.accountProfile.ImgUrl" class="img-fluid rounded-circle mt-4" alt="Profile Image" style="max-width: 150px;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.accountProfile.FullName</h3>
                    <p class="card-text">@Model.accountProfile.Phone</p>
                    <a asp-page="UpdateProfile" class="btn btn-primary">Chỉnh sửa Hồ sơ</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Hồ Sơ</h4>
            <div class="form-group row mt-3">
                <label for="memberName" class="col-sm-3 col-form-label">Họ tên</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="memberName" value="@Model.accountProfile.FullName" readonly>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label for="memberDob" class="col-sm-3 col-form-label">Ngày tháng năm sinh</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="memberDob" value="@Model.accountProfile.Dob?.ToString("yyyy-MM-dd")" readonly>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label for="memberAddress" class="col-sm-3 col-form-label">Địa chỉ</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="memberAddress" value="@Model.accountProfile.Address" readonly>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label for="memberRoleId" class="col-sm-3 col-form-label">Vai trò</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="memberRoleId" value="@Model.RoleName" readonly>
                </div>
            </div>
        </div>
    </div>
</div>

