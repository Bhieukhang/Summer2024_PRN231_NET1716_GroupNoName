@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Categories.DeleteCategoryModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">XÓA LOẠI TRANG SỨC</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                Bạn có chắc chắn muốn xóa loại trang sức này không?
            </div>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Category.Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-inverse-danger">Delete</button>
                    <a asp-page="./ListCategories" class="btn btn-inverse-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
