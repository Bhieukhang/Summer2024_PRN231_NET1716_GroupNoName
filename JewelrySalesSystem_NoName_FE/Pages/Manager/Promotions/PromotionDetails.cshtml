@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Promotions.PromotionDetailsModel
@{
    var promotion = Model?.Promotion;
    var index = 1;
}

<div class="main-panel">
    <div class="content-wrapper">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin khuyến mãi</h4>

                @if (Model?.Promotion != null)
                {
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-feather me-1"></i> Tiêu đề: </span>
                            <span> @promotion?.PromotionName</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-tag me-1"></i> Loại: </span>
                            <span><span class="badge badge-info">@promotion?.Type</span></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-card-text me-1"></i> Mô tả: </span>
                            <span>@promotion?.Description</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-archive me-1"></i> Số lượng sản phẩm: </span>
                            <span>@promotion?.ProductQuantity</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-percent me-1"></i> Phần trăm: </span>
                            <span><span>@promotion?.Percentage</span>%</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-calendar me-1"></i> Ngày chỉnh sửa: </span>
                            <span>@promotion?.InsDate - @promotion?.UpsDate</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <span class="fw-bold"><i class="bi bi-calendar-check me-1"></i> Thời gian hoạt động: </span>
                            <span>@promotion?.StartDate - @promotion?.EndDate</span>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="mb-2">
                            <span class="fw-bold"><i class="bi bi-list me-1"></i> Danh sách sản phẩm sử dụng khuyến mãi: </span>
                        </div>

                        @foreach (var item in Model.Products)
                        {
                            @if (Model.Groups.Any(x => x.ProductId == item.Id))
                            {
                                <div class="col-sm-12 col-lg-3">
                                    <span>@($"{index++}. ")</span>
                                    <span>@item.ProductName</span>
                                </div>
                            }
                        }
                    </div>

                    <div class="row">
                        <div class="col-sm-12 d-flex flex-row justify-content-start">
                            <a href="ListPromotion" class="btn btn-secondary me-3">

                                <i class="bi bi-arrow-left"></i>
                                <span>Trở về</span>
                            </a>
                            <a href="EditPromotion?promotionId=@promotion?.Id" class="btn btn-primary ">
                                <i class="bi bi-pencil"></i>
                                <span>Chỉnh sửa</span>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div>Khuyến mãi bạn tìm không tồn tại.</div>
                }
            </div>
        </div>
    </div>
</div>

