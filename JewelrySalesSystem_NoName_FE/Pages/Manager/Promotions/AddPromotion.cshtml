@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Promotions.AddPromotionModel
@{
}

<div class="main-panel">
    <div class="content-wrapper">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thêm mới khuyến mãi</h4>
                <form class="forms-sample" id="form-submit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.PromotionName" class="control-label">PromotionName</label>
                        <input asp-for="AddPromotionRequest.PromotionName" class="form-control" placeholder="Promotion Name" />
                        <span asp-validation-for="AddPromotionRequest.PromotionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.Type" class="control-label">Type</label>
                        <input asp-for="AddPromotionRequest.Type" class="form-control" placeholder="Enter Type" />
                        <span asp-validation-for="AddPromotionRequest.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.Description" class="control-label">Description</label>
                        <input asp-for="AddPromotionRequest.Description" class="form-control" placeholder="Enter Description" />
                        <span asp-validation-for="AddPromotionRequest.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.ProductQuantity" class="control-label">Product Quantity</label>
                        <input asp-for="AddPromotionRequest.ProductQuantity" type="number" max="99999" class="form-control" placeholder="Enter Product Quantity" />
                        <span asp-validation-for="AddPromotionRequest.ProductQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.Percentage" class="control-label">Percentage</label>
                        <input asp-for="AddPromotionRequest.Percentage" type="number" max="100" class="form-control" placeholder="Enter Percentage" />
                        <span asp-validation-for="AddPromotionRequest.Percentage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.StartDate" class="control-label">Start Date</label>
                        <input asp-for="AddPromotionRequest.StartDate" type="datetime-local" class="form-control" placeholder="Enter Start Date" />
                        <span asp-validation-for="AddPromotionRequest.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.EndDate" class="control-label">End Date</label>
                        <input asp-for="AddPromotionRequest.EndDate" type="datetime-local" class="form-control" placeholder="Enter End Date" />
                        <span asp-validation-for="AddPromotionRequest.EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AddPromotionRequest.Deflag" class="control-label">Deflag</label> <br />
                        <input asp-for="AddPromotionRequest.Deflag" type="radio" value="true" /> Hoạt động
                        <input asp-for="AddPromotionRequest.Deflag" type="radio" value="false" class="ms-3" /> Không hoạt động<br />
                        <span asp-validation-for="AddPromotionRequest.Deflag" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label fw-bold">Chọn sản phẩm để sử dụng khuyến mãi</label> <br />
                        <div class="row">
                            @foreach (var item in Model.Products)
                            {
                                <div class="col-sm-12 col-lg-4">
                                    <input type="checkbox" name="ProductId" value="@item.Id" class="form-checkbox" />
                                    <span class="ms-2">@item.ProductName</span>
                                </div>
                            }
                            <input type="hidden" asp-for="AddPromotionRequest.ProductJson" id="product-json" />
                        </div>
                    </div>


                    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <span class="text-danger mb-3">@Model.ErrorMessage</span>
                    }

                    <div class="row">
                        <div class="col-sm-12 d-flex flex-row justify-content-start">
                            <a href="ListPromotion" class="btn btn-secondary me-3">

                                <i class="bi bi-arrow-left"></i>
                                <span>Trở về</span>
                            </a>
                            <button type="button" onclick="preSubmit();" class="btn btn-primary ">
                                <i class="bi bi-pencil"></i>
                                <span>Lưu</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    function preSubmit() {
        var productIds = document.getElementsByName('ProductId');
        var listProduct = "";

        for (var i = 0; i < productIds.length; i++) {
            if (productIds[i].checked) {
                listProduct += productIds[i].value + " ";
            }
        }
        console.log(listProduct);
        document.getElementById('product-json').value = listProduct.trim();
        document.getElementById('form-submit').submit();


    }
</script>

