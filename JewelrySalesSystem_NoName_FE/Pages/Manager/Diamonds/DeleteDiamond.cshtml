@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Diamonds.DeleteDiamondModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>XÓA TRANG SỨC</h1>
<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductName
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.SellingPrice
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./ListProduct" class="btn btn-secondary">Cancel</a>
    </form>
</div>
