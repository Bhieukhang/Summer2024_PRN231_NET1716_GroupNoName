@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Diamonds.EditDiamondModel

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">CẬP NHẬT KIM CƯƠNG</h2>
                </div>
                <div class="card-body">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <!-- Tên kim cương -->
                        <div class="mb-3">
                            <label asp-for="Diamond.DiamondName" class="form-label">Tên Kim Cương</label>
                            <input asp-for="Diamond.DiamondName" class="form-control" placeholder="Tên Kim Cương" />
                            <span asp-validation-for="Diamond.DiamondName" class="text-danger"></span>
                        </div>
                        <!-- Mã kim cương -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Code" class="form-label">Mã Kim Cương</label>
                            <input asp-for="Diamond.Code" class="form-control" placeholder="Theo mẫu (XXXX0000)" />
                            <span asp-validation-for="Diamond.Code" class="text-danger"></span>
                        </div>
                        <!-- Trọng lượng -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Carat" class="form-label">Trọng Lượng (Carat)</label>
                            <input asp-for="Diamond.Carat" class="form-control" placeholder="Nhập trọng lượng (Carat)" />
                            <span asp-validation-for="Diamond.Carat" class="text-danger"></span>
                        </div>
                        <!-- Màu sắc -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Color" class="form-label">Màu Sắc</label>
                            <input asp-for="Diamond.Color" class="form-control" placeholder="Nhập màu sắc" />
                            <span asp-validation-for="Diamond.Color" class="text-danger"></span>
                        </div>
                        <!-- Độ tinh khiết -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Clarity" class="form-label">Độ Tinh Khiết</label>
                            <input asp-for="Diamond.Clarity" class="form-control" placeholder="Nhập độ tinh khiết" />
                            <span asp-validation-for="Diamond.Clarity" class="text-danger"></span>
                        </div>
                        <!-- Chất lượng cắt -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Cut" class="form-label">Chất Lượng Cắt</label>
                            <input asp-for="Diamond.Cut" class="form-control" placeholder="Nhập chất lượng cắt" />
                            <span asp-validation-for="Diamond.Cut" class="text-danger"></span>
                        </div>
                        <!-- Giá bán -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Price" class="form-label">Giá Bán</label>
                            <input asp-for="Diamond.Price" class="form-control" placeholder="Nhập giá bán" />
                            <span asp-validation-for="Diamond.Price" class="text-danger"></span>
                        </div>
                        <!-- Hình ảnh -->
                        <div class="mb-3">
                            <label asp-for="Diamond.ImageDiamond" class="form-label">Hình Ảnh</label>
                            @if (!string.IsNullOrEmpty(Model.Diamond.ImageDiamond))
                            {
                                <div class="mb-3">
                                    <img src="@Model.Diamond.ImageDiamond" alt="Diamond Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            }
                            <input type="file" asp-for="Diamond.ImageDiamond" class="form-control" />
                            <span asp-validation-for="Diamond.ImageDiamond" class="text-danger"></span>
                        </div>
                        <!-- Số lượng -->
                        <div class="mb-3">
                            <label asp-for="Diamond.Quantity" class="form-label">Số Lượng</label>
                            <input asp-for="Diamond.Quantity" class="form-control" readonly/>
                        </div>
                        <!-- Thời gian bảo hành -->
                        <div class="mb-3">
                            <label asp-for="Diamond.PeriodWarranty" class="form-label">Thời Gian Bảo Hành (tháng)</label>
                            <input asp-for="Diamond.PeriodWarranty" class="form-control" placeholder="Nhập thời gian bảo hành (tháng)" />
                            <span asp-validation-for="Diamond.PeriodWarranty" class="text-danger"></span>
                        </div>
                        <!-- Trạng thái -->
                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="Diamond.DeflagChecked" class="form-check-input" />
                            <label asp-for="Diamond.DeflagChecked" class="form-check-label">Trạng thái</label>
                            <span asp-validation-for="Diamond.DeflagChecked" class="text-danger"></span>    
                        </div>
                        <!-- Nút cập nhật và hủy -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gradient-primary me-2">Cập Nhật</button>
                            <a asp-page="./ListDiamond" class="btn btn-gradient-light btn-fw">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: bold;
    }

    .form-control, .form-select {
        border-radius: 0.375rem;
    }

    .btn-gradient-primary {
        background: linear-gradient(45deg, #6a11cb 0%, #2575fc 100%);
        border: none;
        color: white;
    }

    .btn-gradient-light {
        background: #f8f9fa;
        border: 1px solid #ced4da;
        color: #495057;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, 0.075) !important;
    }
</style>
