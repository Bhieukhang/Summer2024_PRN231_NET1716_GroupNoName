@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Materials.DeleteMaterialModel
@{
    ViewData["Title"] = "Delete Category";
}

<h1>XÓA LOẠI TRANG SỨC</h1>
<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./ListCategories" class="btn btn-secondary">Cancel</a>
    </form>
</div>
