@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Memberships.ListMembershipModel
@{
    int totalItems = Model.TotalItems;
    int totalPages = Model.TotalPages;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Danh sách thành viên </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @*Thêm nút add*@
                    @* <li class="nav-item">
                        <a class="nav-link" href="~/Manager/Products/AddProduct">
                            <span class="menu-title"></span>
                            <button type="button" class="btn btn-gradient-primary btn-fw">Thêm điều kiện</button>
                        </a>
                    </li> *@
                </ol>
            </nav>
        </div>

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Tên </th>
                                <th> Mức độ</th>
                                <th> Điểm </th>
                                <th> Điểm tích lũy </th>
                                <th> Tiền </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var membership in Model.ListMembership)
                            {
                                <tr>
                                    <td> @membership.Name </td>
                                   @*  <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td> *@
                                    <td> @membership.Level </td>
                                    <td> @membership.Point </td>
                                    <td> @membership.RedeemPoint</td>
                                    <td> @membership.UsedMoney</td>
                                    <td> @membership.Deflag</td>
                                    <td>
                                        <a class="nav-link" href="../index.html">
                                            <i class="fa fa-eye menu-icon"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example" style="padding-top:50px">
                        <ul class="pagination justify-content-end">
                            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="./ListMembership" asp-route-page="@(Model.Page - 1)" asp-route-size="@Model.Size" tabindex="-1" aria-disabled="@(Model.Page == 1)">Previous</a>
                            </li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.Page == i ? "active" : "")">
                                    <a class="page-link" asp-page="./ListMembership" asp-route-page="@i" asp-route-size="@Model.Size">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="./ListMembership" asp-route-page="@(Model.Page + 1)" asp-route-size="@Model.Size" aria-disabled="@(Model.Page == Model.TotalPages)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>