@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.GoldRates.ListGoldRateModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">GOLD RATE - TỈ GIÁ VÀNG</h3>
        </div>

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tỉ giá</th>
                                <th>Ngày Cập Nhật</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.goldRateList)
                            {
                                <tr>
                                    <td>@item.Rate</td>
                                    <td>@item.UpsDate?.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-end">
                            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="./ListGoldRate" asp-route-currentPage="@(Model.Page - 1)" asp-route-size="@Model.Size" aria-disabled="@(Model.Page == 1)">Trước</a>
                            </li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.Page == i ? "active" : "")">
                                    <a class="page-link" asp-page="./ListGoldRate" asp-route-currentPage="@i" asp-route-size="@Model.Size">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="./ListGoldRate" asp-route-currentPage="@(Model.Page + 1)" asp-route-size="@Model.Size" aria-disabled="@(Model.Page == Model.TotalPages)">Sau</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
