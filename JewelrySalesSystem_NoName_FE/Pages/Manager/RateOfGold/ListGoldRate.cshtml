@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.GoldRates.ListGoldRateModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">GOLD RATE - TỈ GIÁ VÀNG</h3>
        </div>
        
        <br />
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @if (Model.GoldRate != null)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Rate</th>
                                    <th>Update Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.GoldRate.Rate</td>
                                    <td>@Model.GoldRate.UpsDate</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No gold rate found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

