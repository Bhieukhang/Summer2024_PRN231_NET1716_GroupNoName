@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Stall.ListStallModels
@{
    int totalItems = Model.TotalItems;
    int totalPages = Model.TotalPages;
    int totalAccountCount = Model.TotalAccountCount;
    int totalActiveAccountCount = Model.ActiveAccountCount;
    int totalInActiveAccountCount = Model.TotalAccountCount - Model.ActiveAccountCount;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-info card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/assets/images/dashboard/circle.png" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Tổng tài khoản <i class="mdi mdi-chart-line mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@totalAccountCount</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-success card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Tài khoản đang hoạt động <i class="mdi mdi-diamond mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@totalActiveAccountCount</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-warning card-img-holder text-white">
                    <div class="card-body">
                        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h4 class="font-weight-normal mb-3">
                            Tài khoản ngừng hoạt động <i class="mdi mdi-bookmark-outline mdi-24px float-end"></i>
                        </h4>
                        <h2 class="mb-5">@totalInActiveAccountCount</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách tài khoản</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> Name </th>
                                        <th> Number </th>
                                        <th> View </th>
                                        <th> Edit </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stall in Model.ListStall)
                                    {
                                        <tr>
                                            <td> @stall.Name </td>
                                            <td> @stall.Number </td>
                                            <td>
                                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#employeeModal-@stall.Id">
                                                    <i class="fa fa-eye menu-icon"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editModal-@stall.Id">
                                                    <i class="fa fa-edit menu-icon"></i>
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Detail Modal -->
                                        <div class="modal fade custom-modal" id="employeeModal-@stall.Id" tabindex="-1" aria-labelledby="employeeModalLabel-@stall.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="employeeModalLabel-@stall.Id">Stall Details</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>ID: @stall.Id</p>
                                                        <p>Name: @stall.Name</p>
                                                        <p>Number: @stall.Number</p>
                                                        <p>Staff ID: @stall.StaffId</p>
                                                        <p>Deflag: @stall.Deflag</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Edit Modal -->
                                        <div class="modal fade custom-modal" id="editModal-@stall.Id" tabindex="-1" aria-labelledby="editModalLabel-@stall.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="editModalLabel-@stall.Id">Edit Stall</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="mb-3">
                                                                <label for="editId-@stall.Id" class="form-label">Id</label>
                                                                <input readonly type="text" class="form-control" id="editId-@stall.Id" value="@stall.Id">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="editName-@stall.Id" class="form-label">Name</label>
                                                                <input readonly type="text" class="form-control" id="editName-@stall.Id" value="@stall.Name">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="editNumber-@stall.Id" class="form-label">Number</label>
                                                                <input type="text" class="form-control" id="editNumber-@stall.Id" value="@stall.Number">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="editStaffId-@stall.Id" class="form-label">Staff ID</label>
                                                                <input readonly type="text" class="form-control" id="editStaffId-@stall.Id" value="@stall.StaffId">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="editDeflag-@stall.Id" class="form-label">Deflag</label>
                                                                <input type="text" class="form-control" id="editDeflag-@stall.Id" value="@stall.Deflag">
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>

                            <nav aria-label="Page navigation example" style="padding-top:50px">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-page="./ListStall" asp-route-page="@(Model.Page - 1)" asp-route-size="@Model.Size" tabindex="-1" aria-disabled="@(Model.Page == 1)">Previous</a>
                                    </li>
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(Model.Page == i ? "active" : "")">
                                            <a class="page-link" asp-page="./ListStall" asp-route-page="@i" asp-route-size="@Model.Size">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-page="./ListStall" asp-route-page="@(Model.Page + 1)" asp-route-size="@Model.Size" aria-disabled="@(Model.Page == Model.TotalPages)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
