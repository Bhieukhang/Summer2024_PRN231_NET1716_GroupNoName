@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.Warranty.UpdateWarrantyModel
@{
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Cập nhật bảo hành</h3>
        </div>
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        @if (Model.IsExpired)
                        {
                            <div class="alert alert-danger">
                                Đã quá thời hạn được bảo hành.
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                <input type="text" class="form-control" value="Expired" readonly />
                            </div>
                            <div class="form-group">
                                <label>Ghi chú</label>
                                <textarea class="form-control" readonly>Đã quá thời hạn được bảo hành</textarea>
                            </div>
                            <a asp-page="./ListWarranty" class="btn btn-secondary">Quay lại</a>
                        }
                        else
                        {
                            <form method="post">
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <select class="form-control" asp-for="Warranty.Status">
                                        <option value="Valid for Warranty">Được phép bảo hành</option>
                                        <option value="Invalid for Warranty">Không được phép bảo hành</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Ghi chú</label>
                                    <textarea class="form-control" asp-for="Warranty.Note" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a asp-page="./ListWarranty" class="btn btn-secondary">Hủy</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}