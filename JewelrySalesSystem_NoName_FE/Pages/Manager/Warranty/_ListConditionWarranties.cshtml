@model List<JewelrySalesSystem_NoName_FE.DTOs.Warranty.ConditionWarrantyDTO>

<h3>Danh sách điều kiện bảo hành</h3>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Thứ tự</th>
                        <th>Điều kiện </th>
                        <th>Trạng thái </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.Condition</td>
                            <td>
                                @if (item.Deflag.HasValue && item.Deflag.Value)
                                {
                                    <label class="badge badge-success">Hoạt động</label>
                                }
                                else if (item.Deflag.HasValue && !item.Deflag.Value)
                                {
                                    <label class="badge badge-danger">Pending</label>
                                }
                                else
                                {
                                    <label class="badge badge-warning">Unknown</label>
                                }
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>