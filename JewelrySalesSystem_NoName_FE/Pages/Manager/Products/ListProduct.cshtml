                margin-bottom: 20px;
            }

            .product-card {
                display: flex;
                flex-direction: column;
            }

            .card-img-top {
                max-height: 200px;
                object-fit: cover;
            }

            .product-details {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .product-image {
                max-width: 300px;
                max-height: 300px;
                border-radius: 8px;
                margin-bottom: 20px;
            }

            .product-info {
                width: 100%;
            }

                .product-info p {
                    display: flex;
                    justify-content: space-between;
                    padding: 10px;
                    background-color: #f8f9fa;
                    border: 1px solid #dee2e6;
                    border-radius: 5px;
                    margin-bottom: 10px;
                }

                    .product-info p strong {
                        color: #495057;
                    }

            .form-label {
                font-weight: bold;
                color: #495057;
            }

            .form-control {
                border-radius: 0.375rem;
            }

            .btn-gradient-secondary {
                background: linear-gradient(45deg, #6a11cb 0%, #2575fc 100%);
                border: none;
                color: white;
            }

            .bg-light {
                background-color: #f8f9fa !important;
            }

            .rounded {
                border-radius: 0.375rem !important;
            }

            .shadow-sm {
                box-shadow: 0 .125rem .25rem rgba(0, 0, 0, 0.075) !important;
            }

            .text-danger {
                font-size: 0.875rem;
            }

            .autocomplete {
                position: relative;
                display: inline-block;
            }

            .autocomplete-items {
                position: absolute;
                border: 1px solid #d4d4d4;
                border-bottom: none;
                border-top: none;
                z-index: 99;
                top: 100%;
