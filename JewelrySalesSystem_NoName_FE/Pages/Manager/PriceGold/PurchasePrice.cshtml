@page
@model JewelrySalesSystem_NoName_FE.Pages.Manager.PriceGold.PurchasePriceModel
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách giá thu mua tùy loại sản phảm</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th> PurchasePriceId </th>
                                        <th> PurchasePrice </th>
                                        <th> Size </th>
                                        <th> CategoryId </th>
                                        <th> Description </th>
                                        <th> UpsDate </th>
                                        <th> Status </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var purchasePrice in Model.ListPurchasePrice)
                                    {
                                        <tr>
                                            <td> @purchasePrice.PurchasePriceId </td>

                                            <td> @purchasePrice.PurchasePrice1 </td>
                                            <td> @purchasePrice.Size </td>
                                            <td> @purchasePrice.CategoryId </td>
                                            <td> @purchasePrice.Description </td>
                                            <td> @purchasePrice.UpsDate </td>
                                            <td> @purchasePrice.Status </td>
                                        </tr>

                               
                                    }
                                </tbody>
                            </table>

                            <nav aria-label="Page navigation example" style="padding-top:50px">
                                <ul class="pagination justify-content-end">
                                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-page="./ListStall" asp-route-page="@(Model.Page - 1)" asp-route-size="@Model.Size" tabindex="-1" aria-disabled="@(Model.Page == 1)">Previous</a>
                                    </li>
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(Model.Page == i ? "active" : "")">
                                            <a class="page-link" asp-page="./ListStall" asp-route-page="@i" asp-route-size="@Model.Size">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-page="./ListStall" asp-route-page="@(Model.Page + 1)" asp-route-size="@Model.Size" aria-disabled="@(Model.Page == Model.TotalPages)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>