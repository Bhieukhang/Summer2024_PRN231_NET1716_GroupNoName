<script>
    async function logout(event) {
        event.preventDefault();

        try {
            const response = await fetch('https://localhost:44318/api/v1/Logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${sessionStorage.getItem('Token')}` // Hoặc sử dụng localStorage nếu bạn lưu token ở đó
                }
            });

            if (response.ok) {
                // Xóa token khỏi sessionStorage hoặc localStorage
                sessionStorage.removeItem('Token');
                // Chuyển hướng đến trang đăng nhập hoặc trang chủ
                window.location.href = '/Auth/Login';
            } else {
                console.error('Logout failed');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>